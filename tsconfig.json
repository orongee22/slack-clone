{
  "compilerOptions": {
    "esModuleInterop": true, // import * as React from 'react => import React from 'react'
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext", // 최신 모듈 사용 (import, export)
    "moduleResolution": "Node", // node 가 해석 가능하게
    "target": "es5",
    "strict": true, // 엄격한 type 체크
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@typings/*": ["typings/*"]
    }
  }
}
